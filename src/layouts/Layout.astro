---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { defaultLang, type Lang } from '../i18n';

interface Props {
  title: string;
  description?: string;
  lang?: Lang;
  image?: string;
}

const { 
  title, 
  description = "用 AI 連結學術與產業，讓資料創造價值。",
  lang = defaultLang,
} = Astro.props;

const rawBase = import.meta.env.BASE_URL;
const base = rawBase.endsWith('/') ? rawBase : `${rawBase}/`;
const image = Astro.props.image ? Astro.props.image : `${base}images/og-image.png`;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteURL = 'https://edwarddev0723.github.io/Renhe_s_web/';

// Structured Data — Person
const personJsonLd = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "黃仁和",
  "alternateName": ["Edward Huang", "Renhe Huang"],
  "url": siteURL,
  "image": `${siteURL}images/avatar.jpg`,
  "email": "mailto:renhehuang0723@gmail.com",
  "jobTitle": "AI Engineer / Researcher",
  "affiliation": [
    { "@type": "Organization", "name": "Taiwan Mobile" },
    { "@type": "Organization", "name": "National Central University" }
  ],
  "sameAs": [
    "https://www.linkedin.com/in/edwarddata/",
    "https://github.com/Edwarddev0723",
    "https://huggingface.co/renhehuang",
    "https://medium.com/@renhehuang0723"
  ],
  "knowsAbout": [
    "NLP", "Deep Learning", "Traditional Chinese AI",
    "Vision-Language Models", "CTR Prediction"
  ]
});

// Structured Data — WebSite
const websiteJsonLd = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "黃仁和｜Edward Huang",
  "url": siteURL
});
---

<!DOCTYPE html>
<html lang={lang} data-theme="light">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="author" content="Edward Huang" />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
  
  <!-- Canonical -->
  <link rel="canonical" href={canonicalURL} />
  
  <!-- Sitemap -->
  <link rel="sitemap" type="application/xml" href={`${base}sitemap.xml`} />
  
  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={image} />
  <meta property="og:locale" content={lang === 'zh' ? 'zh_TW' : 'en_US'} />
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={image} />
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Sans+TC:wght@400;500;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
  
  <!-- Structured Data: Person -->
  <script type="application/ld+json" set:html={personJsonLd} />
  <!-- Structured Data: WebSite -->
  <script type="application/ld+json" set:html={websiteJsonLd} />
  <!-- Page-specific structured data slot -->
  <slot name="head" />
  
  <title>{title}</title>
  
  <!-- Theme Script (before content to prevent flash) -->
  <script is:inline>
    const theme = localStorage.getItem('theme') || 
      (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
    document.documentElement.setAttribute('data-theme', theme);
  </script>
</head>
<body>
  <Navbar lang={lang} />
  
  <main>
    <slot />
  </main>
  
  <Footer lang={lang} />
  
  <!-- Theme Toggle Script -->
  <script>
    function initThemeToggle() {
      const toggleBtn = document.getElementById('theme-toggle');
      if (!toggleBtn) return;
      
      toggleBtn.addEventListener('click', () => {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        document.documentElement.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
      });
    }
    
    document.addEventListener('DOMContentLoaded', initThemeToggle);
  </script>
</body>
</html>
